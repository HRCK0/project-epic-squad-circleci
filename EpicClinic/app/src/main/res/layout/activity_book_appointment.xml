                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00C3E1"
                    android:onClick="buttonClicked"
                    android:text="1:00-2:00"
                    android:textSize="12sp"
                    app:layout_column="1"
                    app:layout_row="0" />

